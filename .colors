#!/bin/bash

# Colors
if which tput >/dev/null 2>&1; then
    RED=$(    tput setaf 1)
    GREEN=$(  tput setaf 2)
    YELLOW=$( tput setaf 3)
    BLUE=$(   tput setaf 4)
    PURPLE=$( tput setaf 5)
    CYAN=$(   tput setaf 6)
    RESET=$(  tput sgr0   )
else
    # Cygwin
    RED='\e[1;31m'
    GREEN='\e[1;32m'
    YELLOW='\e[1;33m'
    BLUE='\e[1;34m'
    PURPLE='\e[1;35m'
    CYAN='\e[1;36m'
    RESET='\e[0m'
fi
export RED GREEN YELLOW BLUE PURPLE CYAN RESET
