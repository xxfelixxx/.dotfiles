#!/bin/bash

TPUT=$( which tput 2>&1 )
IS_FREEBSD=$( uname | grep -i freebsd )

# Colors

# -z = length 0, -n length non-zero
# FreeBSD has tput...but the colors don't work...
if [[ -n "$TPUT" && -z "$IS_FREEBSD" ]]; then
    RED=$(    tput setaf 1)
    GREEN=$(  tput setaf 2)
    YELLOW=$( tput setaf 3)
    BLUE=$(   tput setaf 4)
    PURPLE=$( tput setaf 5)
    CYAN=$(   tput setaf 6)
    RESET=$(  tput sgr0   )
else
    # Cygwin and FreeBSD
    RED='\e[1;31m'
    GREEN='\e[1;32m'
    YELLOW='\e[1;33m'
    BLUE='\e[1;34m'
    PURPLE='\e[1;35m'
    CYAN='\e[1;36m'
    RESET='\e[0m'
fi
export RED GREEN YELLOW BLUE PURPLE CYAN RESET
