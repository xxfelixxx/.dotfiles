#!/bin/bash

# Colors
RED=$(    tput setaf 1)
GREEN=$(  tput setaf 2)
YELLOW=$( tput setaf 3)
BLUE=$(   tput setaf 4)
PURPLE=$( tput setaf 5)
CYAN=$(   tput setaf 6)
RESET=$(  tput sgr0   )

# Check if installed
COMMAND_LIST=(
    emacs
    cpan
    cpanm
    perl
    perlcritic
    perltidy
    python
    rlwrap
)
UNINSTALLED=()

_check_if_installed() {
    COMMAND=$1
    LOC=$( which $1 )
    echo -n $YELLOW
    echo "Checking $COMMAND $RESET"
    if [ -z $LOC ]; then
        echo "==> $RED Need to install $COMMAND $RESET"
        UNINSTALLED+=( $COMMAND )
    else 
        echo "==> installed [$GREEN $LOC $RESET ]"
    fi
    true
}

# Check for missing commands
for NAME in ${COMMAND_LIST[@]}; do
    _check_if_installed $NAME
done

# Summary
echo '---------------------------------------------------'
if [ ${#UNINSTALLED[@]} -gt 0 ]; then
    echo "${RED}FAIL! $RESET"
    echo "Need to install: [$YELLOW ${UNINSTALLED[@]} $RESET]"
    exit 1
else
    echo "${GREEN}PASS!$RESET"
    exit 0
fi
