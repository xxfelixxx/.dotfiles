#!/bin/bash

source bash_install_functions

YUM_PACKAGES=(
    asciinema
    colordiff
    emacs-nox
    gcc
    git
    make
    perl-App-cpanminus
    perl-CPAN
    perl-doc
    python34
    python34-setuptools
    rlwrap
)

CPAN_PACKAGES=(
    Env
    Fatal
    File::HomeDir
    File::Which
    LWP::Protocol::https
    Perl::Critic
    Perl::Tidy
    Pod::Spell
    Term::ANSIColor
    WWW::Mechanize
)

yum_install_epel_release
yum_makecache

for YUM_PACKAGE in ${YUM_PACKAGES[@]}; do
    yum_install $YUM_PACKAGE
done

for CPAN_PACKAGE in ${CPAN_PACKAGES[@]}; do
    cpan_install $CPAN_PACKAGE
done

./install_shellcheck
./run_all

success

exit 0
