#!/bin/bash

source bash_install_functions

APT_PACKAGES=(
    colordiff
    emacs-nox
    gcc
    libssl-dev
    make
    perl-doc
    rlwrap
    shellcheck
)

CPAN_PACKAGES=(
    App::cpanminus
    LWP::Protocol::https
    Perl::Critic
    Perl::Tidy
    Term::ANSIColor
    WWW::Mechanize
)

apt_update

for APT_PACKAGE in ${APT_PACKAGES[@]}; do
    apt_install $APT_PACKAGE
done

for CPAN_PACKAGE in ${CPAN_PACKAGES[@]}; do
    cpan_install $CPAN_PACKAGE
done

./install_shellcheck
./run_all

success

exit 0
